<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <RecipeDef ParentName="SurgeryFlesh">
        <defName>TreatHysteria</defName>
        <label>treat female hysteria</label>
        <description>Treat female hysteria by "stimulating" the patient, to bring them to hysterical paroxysm.</description>
        <workerClass>Pointless_Surgeries.Recipe_AddHediffWithTarget</workerClass>
        <addsHediff>HystericalParoxysm</addsHediff>
        <jobString>Bringing TargetA to hysterical paroxysm.</jobString>
        <workAmount>1200</workAmount>
        <anesthetize>false</anesthetize>
        <hideBodyPartNames>true</hideBodyPartNames>
        <targetsBodyPart>false</targetsBodyPart>
        <isViolation>false</isViolation>
        <genderPrerequisite>Female</genderPrerequisite>
        <surgerySuccessChanceFactor>99999</surgerySuccessChanceFactor>
        <deathOnFailedSurgeryChance>0</deathOnFailedSurgeryChance>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <researchPrerequisite>
            <li>PointlessSurgeries</li>
        </researchPrerequisite>
        <skillRequirements>
            <Medicine>0</Medicine>
        </skillRequirements>
        <recipeUsers>
            <li>Human</li>
            <li MayRequire="Ludeon.RimWorld.Anomaly">CreepJoiner</li>
        </recipeUsers>
        <ingredients>
        </ingredients>
    </RecipeDef>
    
    <HediffDef>
        <defName>HystericalParoxysm</defName>
        <label>hysterical paroxysm</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This person had a hysterical paroxysm.</description>
        <everCurableByItem>false</everCurableByItem>
        <stages />
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>60000</disappearsAfterTicks> 
                <showRemainingTime>true</showRemainingTime>
            </li>
            <li Class="Pointless_Surgeries.HediffCompProperties_SocialThoughtSetter">
                <thought>GotSomeLovin</thought>
                <moodOffset>5</moodOffset>
                <removeThoughtOnHediffExpiry>false</removeThoughtOnHediffExpiry>
            </li>
        </comps>
    </HediffDef>
</Defs>